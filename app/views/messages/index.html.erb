<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>
<%= form_for(@message, html: {class: "form-horizontal"}) do |f| %>
    <div class="form-group">
    <label for=":name" class="col-sm-2 control-label">Name</label>
    <div class="col-sm-10">
      <input type="名前" class="form-control" id="inputname" >
    </div>
  </div>
<br
  <div class="form-group">
    <label for=":body" class="col-sm-2 control-label"></label>
    <div class="col-sm-10">
      <input type="内容" class="form-control" id="inputcontent" >
      <textarea  cols="10" rows="10" maxlength="100"></textarea>
    </div>
  </div>